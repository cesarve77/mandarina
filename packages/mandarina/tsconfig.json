{
  "exclude": [
    "**/*.test.ts*",
    "build",
    "src/test/**",
    "node_modules"
  ],
  "compilerOptions": {
    "allowJs": false,
    "types": [
      "jest",
      "react",
      "node"
    ],
    "baseUrl": ".",
    "outDir": "build/",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "es6",
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ]
}
